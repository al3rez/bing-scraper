<% content_for :title, "Create account" %>

<section class="mx-auto w-full max-w-md text-white">
  <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-8 shadow-2xl shadow-slate-950/40">
    <header class="mb-6 text-center">
      <h1 class="text-2xl font-semibold">Create your account</h1>
      <p class="mt-2 text-sm text-slate-300">Sign up to upload keyword lists and monitor Bing SERP metrics.</p>
    </header>

    <%= render "shared/flash" %>

    <%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: {class: "space-y-5"} do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-slate-200" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-lg border border-slate-700 bg-slate-900 px-4 py-3 text-white focus:border-blue-400 focus:outline-none" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-slate-200" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-slate-400">Minimum <%= @minimum_password_length %> characters</p>
        <% end %>
        <%= form.password_field :password, autocomplete: "new-password", class: "mt-2 w-full rounded-lg border border-slate-700 bg-slate-900 px-4 py-3 text-white focus:border-blue-400 focus:outline-none" %>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-slate-200" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 w-full rounded-lg border border-slate-700 bg-slate-900 px-4 py-3 text-white focus:border-blue-400 focus:outline-none" %>
      </div>

      <%= form.submit "Create account", class: "w-full rounded-lg bg-blue-500 py-3 text-sm font-semibold uppercase tracking-wide text-white transition hover:bg-blue-400" %>
    <% end %>
  </div>

  <p class="mt-6 text-center text-sm text-slate-300">
    Already have an account?
    <%= link_to "Sign in", new_session_path(resource_name), class: "text-blue-300 hover:text-blue-200" %>
  </p>
</section>
