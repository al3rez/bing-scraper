<% content_for :title, "Sign in" %>

<section class="mx-auto w-full max-w-md text-slate-900">
  <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg">
    <header class="mb-6 text-center">
      <h1 class="text-2xl font-semibold text-slate-900">Sign in to Bing Scraper</h1>
      <p class="mt-2 text-sm text-slate-600">Upload keywords and monitor Bing SERP metrics.</p>
    </header>

    <%= render "shared/flash" %>

    <%= form_with scope: :user, url: session_path(:user), data: {turbo: false}, html: {class: "space-y-5"} do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-slate-700" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-lg border border-slate-300 bg-slate-50 px-4 py-3 text-slate-900 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-2 focus:ring-blue-100" %>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, class: "block text-sm font-medium text-slate-700" %>
          <%= link_to "Forgot password?", new_password_path(:user), class: "text-xs font-medium text-blue-600 hover:text-blue-700" %>
        </div>
        <%= form.password_field :password, autocomplete: "current-password", class: "mt-2 w-full rounded-lg border border-slate-300 bg-slate-50 px-4 py-3 text-slate-900 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-2 focus:ring-blue-100" %>
      </div>

      <div class="flex items-center justify-between">
        <label class="flex cursor-pointer items-center space-x-2 text-sm text-slate-600">
          <%= form.check_box :remember_me, class: "h-4 w-4 rounded border-slate-300 text-blue-600 focus:ring-blue-400" %>
          <span>Remember me</span>
        </label>
      </div>

      <%= form.submit "Sign in", class: "w-full rounded-lg bg-blue-600 py-3 text-sm font-semibold uppercase tracking-wide text-white transition hover:bg-blue-500" %>
    <% end %>
  </div>

  <p class="mt-6 text-center text-sm text-slate-600">
    Don't have an account?
    <%= link_to "Create one", new_registration_path(:user), class: "font-medium text-blue-600 hover:text-blue-700" %>
  </p>
</section>
