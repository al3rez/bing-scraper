<% content_for :title, "Sign in" %>

<section class="mx-auto w-full max-w-md text-white">
  <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-8 shadow-2xl shadow-slate-950/40">
    <header class="mb-6 text-center">
      <h1 class="text-2xl font-semibold">Sign in to Bing Scraper</h1>
      <p class="mt-2 text-sm text-slate-300">Upload keywords and monitor Bing SERP metrics.</p>
    </header>

    <%= render "shared/flash" %>

    <%= form_with scope: :user, url: session_path(:user), data: {turbo: false}, html: {class: "space-y-5"} do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-slate-200" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-lg border border-slate-700 bg-slate-900 px-4 py-3 text-white focus:border-blue-400 focus:outline-none" %>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, class: "block text-sm font-medium text-slate-200" %>
          <%= link_to "Forgot password?", new_password_path(:user), class: "text-xs text-blue-300 hover:text-blue-200" %>
        </div>
        <%= form.password_field :password, autocomplete: "current-password", class: "mt-2 w-full rounded-lg border border-slate-700 bg-slate-900 px-4 py-3 text-white focus:border-blue-400 focus:outline-none" %>
      </div>

      <div class="flex items-center justify-between">
        <label class="flex cursor-pointer items-center space-x-2 text-sm text-slate-300">
          <%= form.check_box :remember_me, class: "h-4 w-4 rounded border-slate-600 bg-slate-900 text-blue-500 focus:ring-blue-400" %>
          <span>Remember me</span>
        </label>
      </div>

      <%= form.submit "Sign in", class: "w-full rounded-lg bg-blue-500 py-3 text-sm font-semibold uppercase tracking-wide text-white transition hover:bg-blue-400" %>
    <% end %>
  </div>

  <p class="mt-6 text-center text-sm text-slate-300">
    Don't have an account?
    <%= link_to "Create one", new_registration_path(:user), class: "text-blue-300 hover:text-blue-200" %>
  </p>
</section>
