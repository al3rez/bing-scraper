
<% content_for :title, "#{sanitize(@keyword.phrase)} - Bing Scraper" %>

<section class="w-full space-y-4"
         data-controller="keyword-updates"
         data-keyword-updates-url-value="<%= keyword_path(@keyword, format: :json) %>"
         data-keyword-updates-status-value="<%= @keyword.status %>">
  <header class="rounded-lg border border-slate-200 bg-white px-4 py-3">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-xl font-medium text-slate-900"><%= sanitize(@keyword.phrase) %></h1>
        <p class="text-sm text-slate-600">
          <span data-keyword-updates-target="adsCount"><%= @keyword.ads_count %></span> ads ·
          <span data-keyword-updates-target="linksCount"><%= @keyword.links_count %></span> links ·
          <span data-keyword-updates-target="status" class="<%= keyword_status_class(@keyword) %>">
            <%= keyword_status_text(@keyword) %>
          </span>
        </p>
      </div>
      <div class="flex gap-2">
        <%= link_to "← Back", authenticated_root_path, class: "rounded border border-slate-200 bg-slate-100 px-3 py-1 text-sm font-medium text-slate-700 hover:bg-slate-200" %>
      </div>
    </div>
  </header>

  <div class="rounded-lg border border-slate-200 bg-white">
    <div class="border-b border-slate-200 px-4 py-3 flex items-center justify-between">
      <h2 class="text-lg font-medium text-slate-900">Search Results</h2>
      <div class="flex gap-4 text-sm text-slate-600">
        <span><span data-keyword-updates-target="adsCount"><%= @ads.count %></span> ads</span>
        <span><span data-keyword-updates-target="linksCount"><%= @links.count %></span> organic</span>
      </div>
    </div>

    <% if @ads.any? || @links.any? %>
      <div data-keyword-updates-target="resultsContainer" class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-slate-500">PAGE</th>
              <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-slate-500">TYPE</th>
              <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-slate-500">TITLE</th>
              <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-slate-500">URL</th>
              <th scope="col" class="px-3 py-2 text-left text-sm font-medium text-slate-500">ACTION</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 bg-white">
            <% @results.each do |result| %>
              <tr class="hover:bg-slate-50">
                <td class="px-3 py-2 text-sm text-slate-900 font-medium">
                  <%= result["page"] || result[:page] || 1 %>
                </td>
                <td class="px-3 py-2 text-sm">
                  <% if result["result_type"] == "ad" %>
                    <span class="rounded bg-orange-200 px-2 py-1 text-sm font-medium text-orange-800">AD</span>
                  <% else %>
                    <span class="rounded bg-green-200 px-2 py-1 text-sm font-medium text-green-800">ORGANIC</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-sm text-slate-900 max-w-xs truncate">
                  <%= result["title"] || result[:title] || "Untitled" %>
                </td>
                <td class="px-3 py-2 text-sm text-blue-600 max-w-xs truncate">
                  <% url = result["url"] || result[:url] %>
                  <% cite_text = result["cite"] || result[:cite] %>
                  <% if url.present? %>
                    <cite>
                      <%= link_to(cite_text.present? ? cite_text : url, url, target: "_blank", class: "hover:underline") %>
                    </cite>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-sm">
                  <% if @keyword.html_pages.attached? %>
                    <% page_num = result["page"] || result[:page] || 1 %>
                    <% page_html = @keyword.html_pages.find { |p| p.filename.to_s.include?("page-#{page_num}") } %>
                    <% if page_html %>
                      <%= link_to "HTML", download_page_keyword_path(@keyword, page_html.id),
                          class: "text-sm font-medium text-blue-600 hover:text-blue-800 hover:bg-blue-50 px-2 py-1 rounded border border-blue-200 transition-colors" %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <%= render "shared/pagination", pagy: @pagy, item_name: "results" %>
    <% else %>
      <div class="p-4">
        <p class="text-sm text-slate-500">No results found</p>
      </div>
    <% end %>
  </div>
</section>


