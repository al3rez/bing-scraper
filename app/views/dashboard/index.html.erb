
<% content_for :title, "Bing Scraper" %>

<section class="w-full space-y-4"
        data-controller="dashboard-updates"
        data-dashboard-updates-url-value="<%= authenticated_root_path(format: :json) %>"
        data-has-pending-keywords="<%= @has_pending_keywords %>">
  <!-- API Documentation Notice -->
  <div class="rounded-lg border border-blue-200 bg-blue-50 p-4 mb-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-blue-800">API Documentation Available</h3>
          <p class="text-sm text-blue-600">Interactive Swagger UI for testing API endpoints</p>
        </div>
      </div>
      <a href="/api-docs" target="_blank" class="inline-flex items-center px-3 py-2 text-sm font-medium text-blue-600 bg-white border border-blue-300 rounded-md hover:bg-blue-50">
        View API Docs
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    </div>
  </div>

  <!-- Upload Form and KPIs Side by Side -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <!-- Key Metrics -->
    <div class="grid grid-cols-2 gap-2">
      <div class="rounded-lg border border-slate-200 bg-white p-3">
        <p class="text-xl font-bold text-slate-900" data-dashboard-updates-target="totalKeywords"><%= @total_keywords %></p>
        <p class="text-sm text-slate-500">Total Keywords</p>
      </div>
      <div class="rounded-lg border border-slate-200 bg-white p-3">
        <p class="text-xl font-bold text-purple-600" data-dashboard-updates-target="processingRate"><%= @processing_rate %>%</p>
        <p class="text-sm text-slate-500">Success Rate</p>
      </div>
      <div class="rounded-lg border border-slate-200 bg-white p-3">
        <p class="text-xl font-bold text-green-600" data-dashboard-updates-target="processedKeywords"><%= @processed_keywords %></p>
        <p class="text-sm text-slate-500">Processed</p>
      </div>
      <div class="rounded-lg border border-slate-200 bg-white p-3">
        <p class="text-xl font-bold text-blue-600" data-dashboard-updates-target="totalUploads"><%= @total_uploads %></p>
        <p class="text-sm text-slate-500">Total Uploads</p>
      </div>
    </div>

    <!-- Upload Form -->
    <div class="rounded-lg border border-slate-200 bg-white p-4"
         data-controller="file-upload"
         data-file-upload-validate-url-value="<%= validate_keyword_uploads_path %>">
      <h2 class="mb-2 text-lg font-medium text-slate-900">Upload CSV</h2>
      <%= form_with scope: :keyword_upload, url: keyword_uploads_path, html: {multipart: true, class: "space-y-3"} do |form| %>
        <%= form.file_field :file, required: true, accept: ".csv,text/csv", class: "hidden", data: { file_upload_target: "input" } %>

        <div class="border-2 border-dashed border-slate-300 rounded-lg p-8 text-center hover:border-blue-400 hover:bg-blue-50 transition-colors cursor-pointer"
             data-file-upload-target="dropZone">
          <div class="space-y-2">
            <svg class="mx-auto h-12 w-12 text-slate-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/>
              <path d="M14 2v4a2 2 0 0 0 2 2h4"/>
              <path d="M8 13h2"/>
              <path d="M14 13h2"/>
              <path d="M8 17h2"/>
              <path d="M14 17h2"/>
            </svg>
            <div>
              <p class="text-sm text-slate-600">
                <span class="font-medium text-blue-600 hover:text-blue-500" data-file-upload-target="uploadText">Click to upload</span>
                <span data-file-upload-target="fileName"> or drag and drop</span>
              </p>
              <p class="text-xs text-slate-400">CSV files only, 1-100 keywords per file</p>
            </div>
          </div>
        </div>

        <div class="flex justify-between">
          <%= form.submit "Scrape", class: "rounded bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-500 opacity-50", data: { file_upload_target: "uploadBtn" }, disabled: true %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Keywords Table -->
  <%= render "keywords/keywords_table", keywords: @keywords, pagy: @pagy %>
</section>
